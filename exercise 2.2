function pair(x, y) {
    return m => m === 0
                ? x
                : m === 1
                    ? y
                    : error("only accept 0 or 1");
}

function head(z) {
    return z(0);
}

function tail(z) {
    return z(1);
}

function x_point(x) {
    return head(x);
}
function y_point(x) {
    return tail(x);
}
function make_point(x, y) {
    return pair(x, y);
}
function make_segment(start_point, end_point) {
    return pair(start_point,end_point);
}
function start_segment(x) {
    return head(x);
}
function end_segment(x) {
    return tail(x);
}
function average(a, b) {
    return (a + b) / 2;
}
function mid_point_segment(x) {
    const a = start_segment(x);
    const b = end_segment(x);
    return make_point(average(x_point(a),
                              x_point(b)),
                      average(y_point(a),
                              y_point(b)));
}
function print_point(p) {
    display("(");
    display(x_point(p));
    display(",");
    display(y_point(p));
    display(")");
}
const start = make_point(1, 8);
const end = make_point(5, 12);
const segment = make_segment(start, end);
print_point(mid_point_segment(segment));
